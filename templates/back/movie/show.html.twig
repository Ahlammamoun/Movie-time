{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Movie</h1>

 <a href="{{ path('app_back_movie_index') }}" class="text-danger bg-dark"  >back to list</a>
    <table class="table text-xl text-light font-weight-bold bg-dark bg-gradient">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie.type }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ movie.summary }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ movie.poster }}</td>
            </tr>
        
        </tbody>
    </table>


{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}"class="text-danger bg-dark" >edit</a>

    {{ include('back/movie/_delete_form.html.twig') }}

{% endif %}
{% endblock %}
